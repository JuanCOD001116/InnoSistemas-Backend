{
	"name": "InnoSistemas Spring Boot",
	"dockerFile": "Dockerfile",
	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"version": "21",
			"installMaven": "true",
			"installGradle": "false"
		},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers/features/git:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"vscjava.vscode-java-pack",
				"vmware.vscode-boot-dev-pack",
				"ms-vscode.vscode-json",
				"redhat.vscode-yaml",
				"ms-azuretools.vscode-docker",
				"humao.rest-client",
				"formulahendry.auto-rename-tag"
			],
			"settings": {
				"java.configuration.runtimes": [
					{
						"name": "JavaSE-21",
						"path": "/usr/local/sdkman/candidates/java/21.0.4-ms"
					}
				],
				"java.import.maven.enabled": true,
				"java.compile.nullAnalysis.mode": "automatic",
				"spring-boot.ls.problem.application-properties.unknown-property": "warning"
			}
		}
	},
	"forwardPorts": [8080, 5432, 5433, 8081],
	"postCreateCommand": "chmod +x .devcontainer/post-create-setup.sh && .devcontainer/post-create-setup.sh",
	"postStartCommand": "echo 'ðŸš€ InnoSistemas DevContainer iniciado. Ejecuta: cd InnoSistemas/InnoSistemas && ./setup-dev-environment.sh'",
	"mounts": [
		"source=${localWorkspaceFolder}/.m2,target=/home/vscode/.m2,type=bind,consistency=cached"
	],
	"remoteUser": "vscode"
}